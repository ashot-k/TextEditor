<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="mainContainer" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="texteditor.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem onAction="#openButton" text="Open" />

            <MenuItem fx:id="saveButton" onAction="#saveButton" text="Save" />

            <MenuItem fx:id="saveAsButton" onAction="#saveButton" text="Save As" />

            <MenuItem onAction="#closeButton" text="Exit" />
        </Menu>
        <Menu text="Edit" />
        <Menu text="Format">
            <items>
                <MenuItem mnemonicParsing="false" text="Font..." />
            </items></Menu>
      <Menu mnemonicParsing="false" text="View">
        <items>
            <CheckMenuItem fx:id="toolBarOption" onAction="#toggleToolBar" mnemonicParsing="false"  selected="true" text="Show Toolbar" />
            <CheckMenuItem fx:id="utilitiesBarOption" onAction="#toggleUtilities"    mnemonicParsing="false" selected="true" text="Show Utilities" />

        </items>
      </Menu>
      <padding>
         <Insets right="1.0" />
      </padding>
    </MenuBar>
   <ToolBar fx:id="toolBar" maxHeight="25.0" minHeight="15.0">
      <items>
         <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
            <font>
               <Font size="10.0" />
            </font>
         </Button>
               <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
            <font>
               <Font size="10.0" />
            </font>
         </Button>
         <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
            <font>
               <Font size="10.0" />
            </font>
         </Button>
         <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
            <font>
               <Font size="10.0" />
            </font>
         </Button>
      </items>
   </ToolBar>
    <TextArea fx:id="mainBody" wrapText="true" VBox.vgrow="ALWAYS">
        <font>
            <Font name="Consolas" size="13.0" />
        </font></TextArea>
   <GridPane fx:id="utilitiesBar" alignment="CENTER">
     <columnConstraints>
       <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
         <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" />
         <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
         <ColumnConstraints halignment="CENTER" maxWidth="50.0" minWidth="10.0" prefWidth="25.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="45.0" valignment="CENTER" vgrow="ALWAYS" />
     </rowConstraints>
      <children>
         <Label alignment="CENTER" text="Zoom" GridPane.columnIndex="1" />
         <Label alignment="CENTER" text="Label">
            <padding>
               <Insets left="5.0" />
            </padding></Label>
         <Slider fx:id="zoomSlider" accessibleText="Zoom" blockIncrement="25.0" majorTickUnit="75.0" max="200.0" min="25.0" minHeight="-Infinity" minWidth="-Infinity" minorTickCount="25" snapToTicks="true" value="100.0" GridPane.columnIndex="2">
            <GridPane.margin>
               <Insets />
            </GridPane.margin>
         </Slider>
         <Label fx:id="zoomAmountLabel" text="100" GridPane.columnIndex="3">
            <padding>
               <Insets right="5.0" />
            </padding>
         </Label>
      </children>
   </GridPane>
</VBox>
