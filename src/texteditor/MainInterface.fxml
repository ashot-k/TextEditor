<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" alignment="CENTER" styleClass="ok" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="texteditor.Controller">

    <MenuBar fx:id="menuBar" styleClass="MenuBar" stylesheets="@MenuBarStyle.css">
        <Menu text="File">
            <MenuItem fx:id="newMenu" text="New" />
            <MenuItem fx:id="openMenu" text="Open..." />
            <Menu fx:id="openRecentMenu" text="Open Recent" />
         <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="saveMenu" disable="true" text="Save" />
            <MenuItem fx:id="saveAsMenu" disable="true" text="Save As" />
            <MenuItem fx:id="closeMenu" disable="true" text="Close" />
         <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="exitMenu" text="Exit" />
        </Menu>
        <Menu text="Edit" />
        <Menu text="Format">
            <items>
                <MenuItem mnemonicParsing="false" text="Font..." />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="View">
            <items>
                <CheckMenuItem fx:id="toolBarViewOption" mnemonicParsing="false" selected="true" text="Show Toolbar" />
                <CheckMenuItem fx:id="utilitiesViewOption" mnemonicParsing="false" selected="true" text="Show Utilities" />

            </items>
        </Menu>
        <padding>
            <Insets right="1.0" />
        </padding>
    </MenuBar>
    <ToolBar fx:id="toolBar">
        <items>
            <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
                <font>
                    <Font size="10.0" />
                </font>
            </Button>
            <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
                <font>
                    <Font size="10.0" />
                </font>
            </Button>
            <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
                <font>
                    <Font size="10.0" />
                </font>
            </Button>
            <Button mnemonicParsing="false" text="PLACEHOLDERTEXT">
                <font>
                    <Font size="10.0" />
                </font>
            </Button>
        </items>
    </ToolBar>
    <TabPane fx:id="tabs" onDragOver="#handleFileOverEvent" onDragDropped="#handleFileDroppedEvent" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #EEEEEE; -fx-view-order: 1;" VBox.vgrow="ALWAYS" />
    <GridPane fx:id="utilitiesBar" alignment="CENTER" style="-fx-background-color: #E0E0E0;">
        <columnConstraints>
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="190.0" minWidth="137.0" prefWidth="185.0" />
            <ColumnConstraints halignment="RIGHT" hgrow="ALWAYS" maxWidth="126.0" minWidth="73.0" prefWidth="78.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
            <ColumnConstraints halignment="CENTER" maxWidth="50.0" minWidth="10.0" prefWidth="25.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="45.0" valignment="CENTER" vgrow="ALWAYS" />
        </rowConstraints>
        <children>
            <Label alignment="CENTER" text="Zoom" GridPane.columnIndex="1" />
            <Slider fx:id="zoomSlider" accessibleText="Zoom" blockIncrement="25.0" majorTickUnit="75.0" max="200.0" min="25.0" minHeight="-Infinity" minWidth="-Infinity" minorTickCount="25" snapToTicks="true" value="100.0" GridPane.columnIndex="2">
                <GridPane.margin>
                    <Insets />
                </GridPane.margin>
            </Slider>
            <Label fx:id="zoomAmountLabel" text="100" GridPane.columnIndex="3">
                <padding>
                    <Insets right="5.0" />
                </padding>
            </Label>
            <Label alignment="CENTER" style="-fx-view-order: 0;" text="Text Editor" textAlignment="CENTER">
                <font>
                    <Font name="Amiri Slanted" size="22.0" />
                </font>
                <padding>
                    <Insets left="5.0" />
                </padding>
            </Label>
        </children>
    </GridPane>
</VBox>
